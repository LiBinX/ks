<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bj1"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/showmorningplan"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginLeft="28dp"
            android:gravity="center"
            android:background="@drawable/textview_round_border"
            android:layout_marginTop="10dp"
            android:textSize="18dp"

            android:text="1"/>

        <TextView
            android:id="@+id/showafternoonplan"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_marginLeft="28dp"
            android:text="2"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/showmorningplan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/textview_round_border"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/shownightplan"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="3"
            android:layout_marginLeft="28dp"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/showafternoonplan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/textview_round_border"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/iv_click"
            android:layout_alignParentRight="true"
            android:src="@drawable/check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true" />


</RelativeLayout>
